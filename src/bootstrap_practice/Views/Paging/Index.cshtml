@model bootstrap_practice.ViewModels.PagingViewModel

@{
    ViewData["Title"] = "Paging";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Paging" asp-action="Index">
    <div class="form-group">
        <label for="total_items">Total items:</label>
        <input id="total_items" name="total_items" class="form-control" />
    </div>
    <div class="form-group">
        <label for="items_per_page">Items per page:</label>
        <input id="items_per_page" name="items_per_page" class="form-control" />
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

@if (Model != null)
{
    <p>@Model.total_items</p>
    <p>@Model.items_per_page</p>
}
